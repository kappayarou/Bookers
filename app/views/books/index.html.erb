<body>
  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="caution">
    <% if @errors_list %>
      <% if @errors_list.errors.any? %>
        <%= @errors_list.errors.count %>件のerrorが発生しました。<br>
        <% @errors_list.errors.full_messages.each do |error| %>
          <%= error %><br>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <h2>New book</h2>
  <%= form_with model:@books, url:'/books', local:true do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
     <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
    <% end %>
  </div>

</body>


