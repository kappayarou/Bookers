<h2>Editing Book</h2>
<%= form_with model:@books, url:"/books/#{@books.id}", local:true do |f| %>
<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Update Book' %>
  <% end %>
</div>
<%= link_to 'Show', book_path(@books.id) %>
|
